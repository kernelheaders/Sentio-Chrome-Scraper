{
  "name": "sentio-chrome-extension",
  "version": "1.0.0",
  "description": "API-driven Chrome Extension for centrally managed Sahibinden.com scraping",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "package": "npm run build && npm run zip",
    "zip": "cd build && zip -r ../sentio-extension.zip .",
    "clean": "rm -rf build dist",
    "mock-server": "node mock-server.js",
    "dev": "concurrently \"npm run mock-server\" \"npm run watch\"",
    "seed:job": "bash scripts/seed_job.sh"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-loader": "^9.1.0",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "cors": "^2.8.5",
    "eslint": "^8.42.0",
    "express": "^5.1.0",
    "jest": "^29.5.0",
    "terser-webpack-plugin": "^5.3.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "crypto-js": "^4.1.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sentio/chrome-extension.git"
  },
  "keywords": [
    "chrome-extension",
    "scraping",
    "sahibinden",
    "api-driven",
    "manifest-v3"
  ],
  "author": "Sentio Development Team",
  "license": "MIT"
}
